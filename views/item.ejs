<!Doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <title>Task Inventory</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/stylesheets/imageStyles.css">
    <link rel="stylesheet" href="/stylesheets/generalStyles.css">
</head>
<body class="blue-grey darken-4 grey-text text-lighten-2">
<div class="container">
    <div class="row">
        <h1>Details:</h1>
        <a class="btn light-blue waves-effect waves-light modal-trigger" href="/list">
            Back
        </a>
        <button data-target="modal1" class="btn amber darken-2 waves-effect waves-light modal-trigger">
            <i class="material-icons right">edit</i>
            Edit
        </button>
        <a class="btn red darken-1 waves-effect waves-light" href="/list/item/<%= deckID %>/delete">
            <i class="material-icons right">delete</i>
            Delete
        </a>
    </div>
    <div class="row">
        <div class="itemPageInfo">
            <div class="divider"></div>
            <div class="section">
                <h5>Deck</h5>
                <p><%= name%></p>
            </div>
            <div class="divider"></div>
            <div class="section">
                <h5>Description</h5>
                <p><%= description%></p>
            </div>
            <div class="divider"></div>
            <div class="section">
                <h5>Cards Acquired: </h5>
                <p><%= cards%></p>
            </div>
            <div class="divider"></div>
        </div>
        <img src="/images/blue-eyes.png" class="cardImage">
    </div>
</div>


<div id="modal1" class="modal blue-grey darken-1 grey-text text-lighten-2">
    <div class="modal-content">
        <h2>Edit item:</h2>
        <form method="post" action="/list/item/<%= deckID%>">
            <div class="row">
                <div class="input-field col s6">
                    <label for="nameInput" class="grey-text text-lighten-2">Deck Name:</label>
                    <input type="text" name="name" id="nameInput" class="validate grey-text text-lighten-2"
                           data-length="32" required>
                </div>
                <div class="input-field col s6">
                    <label for="quantityInput" class="grey-text text-lighten-2">Cards Acquired:</label>
                    <input type="number" name="quantity" id="quantityInput" class="grey-text text-lighten-2" value=1
                           required>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="descriptionInput" class="grey-text text-lighten-2">Item Description:</label>
                    <input type="text" name="description" id="descriptionInput" class="grey-text text-lighten-2"
                           data-length="100">
                </div>
            </div>
            <div class="modal-footer blue-grey darken-1">
                <button class="btn waves-effect waves-light " type="submit">
                    <i class="material-icons right">send</i>
                    Submit
                </button>
                <a href="#!" class="modal-close waves-effect waves-green btn-flat grey-text text-lighten-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
<script>M.AutoInit();</script>
</body>